{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": ".",
    "target": "es6",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es5", "es6", "dom", "dom.iterable"]
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
